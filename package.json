{
  "name": "library",
  "version": "1.0.0",
  "description": "A base library from which other libraries can be derived",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": "~6.9.3",
    "npm": "~3.10.10"
  },
  "scripts": {
    "preversion": "git checkout . && git checkout master && git pull && npm run validate",
    "postversion": "git push && git push --tags && npm run copy_build_to_lib && npm publish",
    "build": "npm run build:lib && npm run build:test",
    "build:lib": "webpack --config webpack/lib.ts",
    "build:lib:watch": "npm run build:lib -- --watch",
    "build:test": "webpack --config webpack/test.ts",
    "build:test:watch": "npm run build:test -- --watch",
    "copy_build_to_lib": "mkdirp lib && cp build/types/src/index.d.ts lib/ && cp build/lib/* lib/",
    "lint": "tslint {./,src/**/,test/**/,webpack/**/}*.ts --type-check --project ./tsconfig.json",
    "lint:watch": "chokidar src/**/*.ts test/**/*.ts webpack/**/*.ts -c \"npm run lint\" --initial --silent",
    "test": "mocha -c --full-trace --no-exit --no-timeouts build/test/index.test.js",
    "test:watch": "npm test -- -w",
    "validate": "npm run lint && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/node-js-library.git"
  },
  "keywords": [
    "library"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Player1os/node-js-library/issues"
  },
  "homepage": "https://github.com/Player1os/node-js-library#readme",
  "devDependencies": {
    "@types/bluebird-global": "^3.5.2",
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.21",
    "@types/webpack": "^2.2.15",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-preset-env": "^1.5.0",
    "chai": "^3.5.0",
    "chokidar": "^1.7.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.4.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "tslint-config-airbnb": "^5.0.1",
    "tsutils": "=1.6.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  }
}
